					@echo "      â–„â–ˆâ–ˆâ–ˆâ–ˆâ–€        â–ˆâ–ˆâ–ˆ    â–ˆâ–€    â–ˆâ–€   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„â–„â–ˆâ–ˆ  â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€  "
					@echo "                                      â–€                    "
					@echo " "
					@echo " "
					@sleep 1

# Regra para compilar objetos
$(OBJ_DIR)%.o:		$(SRC_DIR)%.c
					@mkdir -p $(@D)
					@$(CC) $(CFLAGS) -c $< -o $@
					@echo "ðŸ”§ Compiling... $<"

# CompilaÃ§Ã£o da libft
$(LIBFT):
					@make -C ./libft

# Limpeza
clean:
					@$(RM) $(OBJ_DIR)/*
					@make clean -C ./libft
					clear
					@echo " "
					@echo "ðŸ—‘ï¸ All objects removed."
					@echo " "

fclean: 			clean
					@$(RM) $(NAME)
					@$(RM) $(OBJ_DIR)
					@make fclean -C ./libft
					@clear
					@echo " "
					@echo " "
					@echo "        â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„    â–„â–ˆ    â–ˆâ–„     â–„â–ˆ   â–„â–ˆ        â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„  "
					@echo "       â–ˆâ–ˆâ–ˆ    â–ˆâ–ˆâ–ˆ   â–ˆâ–ˆâ–ˆ    â–ˆâ–ˆâ–ˆ   â–ˆâ–ˆâ–ˆ  â–ˆâ–ˆâ–ˆ       â–ˆâ–ˆâ–ˆ    â–ˆâ–ˆâ–ˆ "
