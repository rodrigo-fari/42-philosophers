MAKEFLAGS			+= -s
NAME				= philo
INC					= inc/
SRC_DIR				= src/
OBJ_DIR				= obj/
CC					= cc
CFLAGS				= -pthread -fsanitize=thread -Wall -Werror -Wextra -I$(INC)
RM					= rm -rf
SRCS				= $(shell find $(SRC_DIR) -name "*.c")
OBJS				= $(SRCS:$(SRC_DIR)/%.c=$(OBJ_DIR)/%.o)

BOLD				= \033[1m
UNDERLINE			= \033[4m
BLINK				= \033[5m
REVERSE				= \033[7m
RED					= \033[0;31m
HIDDEN				= \033[8m
GREEN				= \033[0;32m
RESET				= \033[0m
BLOOD_RED			= \033[38;5;52m
WHITE				= \033[1;37m
BG_BLOOD_RED		= \033[48;5;124m
BG_WHITE			= \033[47m
UNDERLINE_WHITE		= \033[4;37m
UNDERLINE_BLOOD_RED	= \033[4;38;5;52m
BYELLOW				= \033[1;33m

all: 				$(NAME)

$(NAME): 			$(OBJS) $(LIBFT)
					@$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
					@clear
					printf "\n"
					printf "\n"
					printf "          笏鞘煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏貼n"
					printf "笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏ｫ ${BOLD}${BLOOD_RED}攝 攝｡ 攝｢ 攝･ 攝ｨ ${RESET}"
					printf "${WHITE}攝ｬ 攝ｨ 攝ｩ 攝｡ 攝 攝ｫ 攝ｬ${RESET} 笏ソn"
					printf "     笏鞘煤笏≫煤笏≫判笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫判笏≫煤笏≫煤笏≫箔\n"
					printf "笏≫煤笏≫煤笏≫鉢 Program has compiled ${GREEN}${BOLD}${BLINK}SUCCESSFULLY! ${RESET}笏ソn"
					printf "     笏冷煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫縛\n"
					printf "\n"
					printf "\n"

$(OBJ_DIR)%.o:		$(SRC_DIR)%.c
					@mkdir -p $(@D)
					@$(CC) $(CFLAGS) -c $< -o $@
					@echo "沐ｧ Compiling... $<"

clean:
					@$(RM) $(OBJ_DIR)/*
					@clear
					printf "\n"
					printf "\n"
					printf "      笏鞘煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏貼n"
					printf "笏≫煤笏≫煤笏≫煤笏ｫ ${BOLD}${BLOOD_RED}攝 攝｡ 攝｢ 攝･ 攝ｨ ${RESET}"
					printf "${WHITE}攝ｬ 攝ｨ 攝ｩ 攝｡ 攝 攝ｫ 攝ｬ ${RESET}笏ソn"
					printf "     笏鞘判笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫判笏貼n"
					printf "笏≫煤笏≫煤笏≫鉢 Program has been ${RED}${BOLD}${BLINK}DELETED. ${RESET}笏ソn"
					printf "     笏冷煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏≫煤笏媾n"
					printf "\n"
					printf "\n"

fclean: 			clean
					@$(RM) $(NAME)
					@$(RM) $(OBJ_DIR)

re: 				fclean all



.PHONY: 			all clean fclean re start
