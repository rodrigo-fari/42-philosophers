$(OBJ_DIR)%.o:		$(SRC_DIR)%.c
					@mkdir -p $(@D)
					@$(CC) $(CFLAGS) -c $< -o $@
					@echo "ðŸ”§ Compiling... $<"

$(LIBFT):
					@make -C ./libft

clean:
					@$(RM) $(OBJ_DIR)/*
					@make clean -C ./libft
					clear
					@echo " "
					@echo "ðŸ—‘ï¸ All objects removed."
					@echo " "

fclean: 			clean
					@$(RM) $(NAME)
					@$(RM) $(OBJ_DIR)
					@make fclean -C ./libft
					@clear
					@echo " "
					@echo " "
