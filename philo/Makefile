MAKEFLAGS += -s
NAME				= philo
LIBFT				= ./libft/libft.a
INC					= inc/
SRC_DIR				= src/
OBJ_DIR				= obj/
CC					= cc
CFLAGS				= -pthread -fsanitize=thread -Wall -Werror -Wextra -I$(INC)
RM					= rm -rf
SRCS				= $(wildcard $(SRC_DIR)*.c)
OBJS				= $(patsubst $(SRC_DIR)%.c,$(OBJ_DIR)%.o,$(SRCS))

all: 				$(NAME)

$(NAME): 			$(OBJS) $(LIBFT)
					@$(CC) $(CFLAGS) $(OBJS) $(LIBFT) -o $(NAME)
					@clear
